{
  "name": "tkspring-contract",
  "version": "0.0.1",
  "private": true,
  "description": "Solidity Hardhat TypeScript Boilerplate",
  "scripts": {
    "prepare": "husky install",
    "cucumber": "node ./node_modules/@cucumber/cucumber/bin/cucumber-js features/**/*.feature --require test/register.ts --require-module ts-node/register --format-options \"{\\\"snippetInterface\\\": \\\"async-await\\\"}\"  --format html:reports/report.html --format summary --format @cucumber/pretty-formatter --format cucumber-console-formatter --publish-quiet",
    "start": "hardhat node",
    "clean": "hardhat clean && rm -rf cache",
    "compile": "hardhat compile",
    "console": "hardhat console",
    "storage:layout": "hardhat storage-layout",
    "size": "hardhat size-contracts",
    "prepend-spdx": "hardhat prepend-spdx-license",
    "deploy": "deploy.sh",
    "deploy:custom": "npx hardhat run scripts/deploy_testnet.ts --network custom",
    "deploy:all": "hardhat run scripts/deploy.ts --network",
    "verify": "hardhat verify --network",
    "test": "hardhat typechain && hardhat test",
    "test:trace": "hardhat test --trace",
    "test:fresh": "hardhat compile --force && hardhat test --no-compile --trace",
    "test:coverage": "hardhat coverage",
    "build": "hardhat compile && hardhat typechain",
    "generate:docs": "hardhat docgen",
    "remix": "remixd -s . --remix-ide https://remix.ethereum.org",
    "analyze:security": "myth analyze --solc-json mythril.config.json",
    "format": "prettier '**/{*,''}.{json,js,ts,sol}' --write; eslint '**/{*,''}.{json,js,ts}' --fix; solhint 'contracts/*.sol' --fix;",
    "format:json": "prettier '**/{*,''}.json' --write; eslint '**/{*,''}.json' --fix;",
    "format:js": "prettier '**/{*,''}.js' --write; eslint '**/{*,''}.js' --fix;",
    "format:ts": "prettier '**/{*,''}.ts' --write; eslint '**/{*,''}.ts' --fix;",
    "format:sol": "prettier '**/*.sol' --write; solhint 'contracts/*.sol' --fix;",
    "lint": "shellcheck bin/*; cspell lint --dot --gitignore '**/{*,''}{.,''}*'; prettier '**/{*,''}.{json,js,ts,sol}' --check; solhint 'contracts/*.sol'; eslint '**/{*,''}.{json,js,ts}';",
    "lint-contracts": "solhint 'contracts/**/*.sol'",
    "hook:pre-push": "tsc --noEmit && shellcheck bin/* && cspell lint --dot --gitignore '**/{*,''}{.,''}*' && prettier '**/{*,''}.{json,js,ts,sol}' --check && solhint 'contracts/*.sol' && eslint '**/{*,''}.{json,js,ts}'"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run hook:pre-push"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@big-whale-labs/poseidon": "^0.0.5",
    "@cucumber/cucumber": "^8.7.0",
    "@cucumber/gherkin": "^24.1.0",
    "@cucumber/html-formatter": "11.0.4",
    "@cucumber/pretty-formatter": "1.0.0-alpha.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.7.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@tenderly/hardhat-tenderly": "^1.1.4",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "cspell": "^6.4.1",
    "cucumber-console-formatter": "1.0.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-abi-types-generator": "^1.3.2",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "hardhat-storage-layout": "^0.1.6",
    "hardhat-tracer": "1.1.0-rc.6",
    "husky": "^8.0.1",
    "istanbul-badges-readme": "^1.8.2",
    "jest-cucumber": "^3.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "1.0.0-dev.23",
    "shellcheck": "^1.1.0",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}
